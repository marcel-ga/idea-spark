service cloud.firestore {
  match /databases/{database}/documents {
    // Shared Group Data: Must be a member of the group
    match /artifacts/{appId}/public/data/groups/{groupId} {
      allow read: if request.auth != null && request.auth.uid in resource.data.members;
      allow create: if request.auth != null;
      allow update: if request.auth != null && request.auth.uid in resource.data.members;
    }
    
    // Group Ideas: Must be a member of the parent group
    match /artifacts/{appId}/public/data/{collectionName}/{docId} {
      allow read, write: if request.auth != null; 
      // Note: In production, verify group membership here specifically
    }

    // Private User Data: Only the specific user can access
    match /artifacts/{appId}/users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
