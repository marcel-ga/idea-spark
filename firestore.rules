rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Personal ideas - only owner can access
    match /artifacts/idea-tracker-v1/users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Group data - any authenticated user can access
    match /artifacts/idea-tracker-v1/public/data/{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
